<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blogs content">
        <h2>All blogs</h2>
        <% if(blogs.length>0){%>
            <% blogs.forEach(blog =>{ %>
                <a class="single" href="/blogs/<%=blog._id%>">
                <h3 class="title"><%=blog.title%></h3> <!--it return the title abject for each blog-->
                <p class="snippet"><%=blog.snippet%></p>
                </a>
            <% }) %>
        <%  } else { %>
            <p>There is no blogs to display if the const blogs is absent</p>
            <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>